<resources>

    <style name="BezelImageView">
        <item name="biv_maskDrawable">@drawable/material_drawer_rectangle_mask</item>
        <item name="biv_drawCircularShadow">false</item>
        <item name="biv_selectorOnPress">@color/material_drawer_primary</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppActionMenu" parent="Theme.AppCompat.Light">
        <item name="background">@color/colorAccent</item>
        <item name="actionMenuTextColor">?attr/colorOnSecondary</item>
    </style>

    <style name="AppTextLabel">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/app_margin</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
    </style>

    <style name="AppTextInput">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginTop">@dimen/app_margin</item>
    </style>

    <style name="AppTextDialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginTop">@dimen/app_margin</item>
    </style>

    <style name="AppScreen">
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="AppEditText">
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:background">@drawable/style_edittext</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/app_padding_mid</item>
    </style>

    <style name="AppEditTextEmail" parent="AppEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="AppEditTextPassword" parent="AppEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTextImage">
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:padding">@dimen/app_padding_small</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextUserPosition">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextUser">
        <item name="android:padding">@dimen/app_padding_small</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextUserBig" parent="AppTextUser">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
