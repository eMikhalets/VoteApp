<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:label="@string/label_fragment_home"
        android:name="com.supercasual.fourtop.uimain.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_right_in" />
        <action
            android:id="@+id/action_homeFragment_to_userImagesFragment"
            app:destination="@id/userImagesFragment"
            app:enterAnim="@anim/slide_right_in" />
        <action
            android:id="@+id/action_homeFragment_to_votingFragment"
            app:destination="@id/votingFragment"
            app:enterAnim="@anim/slide_right_in" />
        <action
            android:id="@+id/action_homeFragment_to_topImagesFragment"
            app:destination="@id/topImagesFragment"
            app:enterAnim="@anim/slide_right_in" />
        <action
            android:id="@+id/action_homeFragment_to_topUsersFragment"
            app:destination="@id/topUsersFragment"
            app:enterAnim="@anim/slide_right_in" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:label="@string/label_fragment_profile"
        android:name="com.supercasual.fourtop.uimain.ProfileFragment"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_right_out" />
    </fragment>

    <fragment
        android:id="@+id/userImagesFragment"
        android:name="com.supercasual.fourtop.uimain.UserImagesFragment"
        android:label="@string/label_fragment_user_images"
        tools:layout="@layout/fragment_user_images" >
        <action
            android:id="@+id/action_userImagesFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_right_out" />
    </fragment>

    <fragment
        android:id="@+id/votingFragment"
        android:name="com.supercasual.fourtop.uimain.VotingFragment"
        android:label="@string/label_fragment_voting"
        tools:layout="@layout/fragment_voting" >
        <action
            android:id="@+id/action_votingFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_right_out" />
    </fragment>

    <fragment
        android:id="@+id/topImagesFragment"
        android:label="@string/label_fragment_top_images"
        android:name="com.supercasual.fourtop.uimain.TopImagesFragment"
        tools:layout="@layout/fragment_top_images" >
        <action
            android:id="@+id/action_topImagesFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_right_out" />
    </fragment>

    <fragment
        android:id="@+id/topUsersFragment"
        android:label="@string/label_fragment_top_users"
        android:name="com.supercasual.fourtop.uimain.TopUsersFragment"
        tools:layout="@layout/fragment_top_users" >
        <action
            android:id="@+id/action_topUsersFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_right_out" />
    </fragment>

</navigation>