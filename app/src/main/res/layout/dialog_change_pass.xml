<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppContainerDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_pass_label"
            style="@style/AppTextLabelDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_btn_change_pass_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_new"
            style="@style/AppTextLabelInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_text_new_pass"
            app:layout_constraintStart_toStartOf="@id/input_new"
            app:layout_constraintTop_toBottomOf="@id/text_pass_label" />

        <EditText
            android:id="@+id/input_new"
            style="@style/AppEditTextDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_new"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/text_new_conf"
            style="@style/AppTextLabelInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_text_new_pass_conf"
            app:layout_constraintStart_toStartOf="@id/input_new_conf"
            app:layout_constraintTop_toBottomOf="@id/input_new" />

        <EditText
            android:id="@+id/input_new_conf"
            style="@style/AppEditTextDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_new_conf"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/btn_apply"
            style="@style/AppButtonDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/profile_btn_apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_new_conf" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/AppProgressBarDialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>