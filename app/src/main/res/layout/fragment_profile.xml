<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin_small"
        android:elevation="@dimen/app_card_elevation"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardCornerRadius="@dimen/app_corner_radius"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/item_user_photo_size"
                android:layout_height="@dimen/item_user_photo_size"
                android:layout_gravity="center_horizontal"
                android:transitionName="@string/app_transition_name_image_zoom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:src="@drawable/placeholder_user" />

            <TextView
                android:id="@+id/text_username"
                style="@style/AppTextUserBig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/text_rating"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="dartvader" />

            <TextView
                android:id="@+id/text_rating"
                style="@style/AppTextUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/text_username"
                tools:text="Rating: 5325" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_change_pass"
        style="@style/AppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_small"
        android:text="@string/profile_change_pass"
        app:layout_constraintTop_toBottomOf="@id/card_profile" />

    <Button
        android:id="@+id/btn_change_photo"
        style="@style/AppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_small"
        android:text="@string/profile_change_photo"
        app:layout_constraintTop_toBottomOf="@id/btn_change_pass" />

    <Button
        android:id="@+id/btn_logout"
        style="@style/AppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_small"
        android:text="@string/profile_btn_logout"
        app:layout_constraintTop_toBottomOf="@id/btn_change_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>