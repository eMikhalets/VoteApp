<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/backgroundCard">
    <item>
        <selector>

            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/backgroundDisabled" />
                    <corners android:radius="@dimen/app_btn_corner_radius" />
                    <stroke
                        android:width="@dimen/app_border_width_small"
                        android:color="?attr/colorBorder" />
                </shape>
            </item>

            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/backgroundMain" />
                    <corners android:radius="@dimen/app_btn_corner_radius" />
                    <stroke
                        android:width="@dimen/app_border_width_small"
                        android:color="?attr/colorBorder" />
                </shape>
            </item>

        </selector>
    </item>
</ripple>